@model BecomeDealerFormModel

@{
    ViewData["Title"] = "Become a Dealer";   
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2 col-sm-12">
            <h2 class="text-center">@ViewData["Title"]</h2>
            <form method="post">
              <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Alexander">
                <span asp-validation-for="Name" class="small text-danger"></span>
              </div>
              <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="0887773333">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
              </div>
                <input class="btn btn-info" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>