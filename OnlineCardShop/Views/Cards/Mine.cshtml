@model AllCardsServiceModel

@{
    ViewData["Title"] = "My Cards";
    ViewBag.AllowCardEdit = true;
}

<head>
    <link rel="stylesheet" href="~/css/cards.css" />
</head>

<partial name="_CardsPaginationPartial" model="@Model" />

@if (!Model.Cards.Any())
{
    <h2 class="text-center">You have no cards!</h2>
}else{
<partial name="_CardsListingPartial" model="@Model" />
}

